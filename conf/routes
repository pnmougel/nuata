# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page

GET         /count/facts           controllers.Stats.countFacts
GET         /q/:query              controllers.Search.searchFacts(query)
POST        /init                  controllers.DbInit.init

GET         /autocomplete/:query   controllers.AutoComplete.autoComplete(query)

POST        /category/index        controllers.CrudCtrl.index(model = "category")
POST        /category/search       controllers.CrudCtrl.find(model = "category")
POST        /category/match        controllers.CrudCtrl.findMatch(model = "category")
GET         /category/:id          controllers.CrudCtrl.byId(model = "category", id : String)

POST        /dimension/index       controllers.CrudCtrl.index(model = "dimension")
POST        /dimension/search      controllers.CrudCtrl.find(model = "dimension")
POST        /dimension/match       controllers.CrudCtrl.findMatch(model = "dimension")
GET         /dimension/:id         controllers.CrudCtrl.byId(model = "dimension", id : String)

POST        /unit/index            controllers.CrudCtrl.index(model = "unit")
POST        /unit/search           controllers.CrudCtrl.find(model = "unit")
POST        /unit/match            controllers.CrudCtrl.findMatch(model = "unit")
GET         /unit/:id              controllers.CrudCtrl.byId(model = "unit", id : String)

POST        /ooi/index             controllers.CrudCtrl.index(model = "ooi")
POST        /ooi/search            controllers.CrudCtrl.find(model = "ooi")
POST        /ooi/match             controllers.CrudCtrl.findMatch(model = "ooi")
GET         /ooi/:id               controllers.CrudCtrl.byId(model = "ooi", id : String)

POST        /fact/index            controllers.FactCtrl.index()

GET         /test                  controllers.Test.test()